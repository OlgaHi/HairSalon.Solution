@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h1>Clients</h1>

@if (@Model.Count == 0)
{
  <h3>No clients</h3>
} 
<div class="client">
@foreach (Client client in Model)
{
  <li>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId }) | @client.Stylyst.Name</li>
}
</div>
<p><button class="btn btn-light" id="see">@Html.ActionLink("Add new client", "Create")</button></p>
<p><button class="btn btn-light" id="see">@Html.ActionLink("Home", "Index", "Home")</button></p>