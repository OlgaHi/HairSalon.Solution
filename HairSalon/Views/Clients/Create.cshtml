@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h1>New client</h1>
@using (Html.BeginForm())
{ 
  <div class="container">
    <div class="col d-flex justify-content-center">
      <div class="form-group">
        @Html.LabelFor(model => model.Name)
        @Html.TextBoxFor(model => model.Name, new { required = "required"})
      </div>
      <div class="form-group">
        @Html.LabelFor(model => model.PhoneNumber)
        @Html.TextBoxFor(model => model.PhoneNumber, new { required = "required"})
      </div>
      <div class="form-group">
        @Html.LabelFor(model => model.Stylist)
        @Html.DropDownList("StylistId")
      </div>
    </div>
    <button class="btn btn-light" id="see"><input type="submit" value="Add" /></button>
  </div>
}
<p><button class="btn btn-light" id="see">@Html.ActionLink("Show all clients", "Index")</button></p>