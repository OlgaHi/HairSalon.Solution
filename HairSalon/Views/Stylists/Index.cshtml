@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

<h1>Stylists</h1>

@if(@Model.Count == 0)
{
  <h3> No Stylists Available</h3>
}

<div class="stylist">
<ul>
  @foreach(Stylist stylist in Model)
  {
    <li>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</li>
  }
</ul>
</div>

<p><button class="btn btn-light" id="see">@Html.ActionLink("Add new Stylist", "Create")</button></p>
<p><button class="btn btn-light" id="see">@Html.ActionLink("Home", "Index", "Home")</button></p>