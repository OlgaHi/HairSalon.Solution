@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist
@using HairSalon.Models;

<h1>Details</h1>
<hr />
<h2>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)<h2>
<h2>@Html.DisplayNameFor(model => model.Specialization): @Html.DisplayFor(model => model.Specialization)<h2>

<ul>
  @if (@Model.Clients.Count == 0)
  {
    <p>No clients</p>
  }

  <p>Total clients: @Model.Clients.Count</p>
  @foreach (Client client in @Model.Clients)
  {
    <li>Client: @client.Name</li>
  }
</ul>

<button class="btn btn-light" id="see">@Html.ActionLink("Add a New Client", "Create", "Clients")</button>
<button class="btn btn-light" id="see">@Html.ActionLink("Back to stylists", "Index")</button>
